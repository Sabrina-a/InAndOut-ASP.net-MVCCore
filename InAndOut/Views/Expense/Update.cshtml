@model InAndOut.Models.ViewModels.ExpenseVM

<form method="post" asp-action="Update">
    <input asp-for="Expense.Id" hidden/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Expense</h2>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group row">

                    <div class="col-md-4">
                        <label asp-for="Expense.ExpenseName"></label>
                    </div>

                    <div class="col-md-4">

                        <label asp-for="Expense.Amount"></label>

                    </div>

                    <div class="col-md-4">

                        <label asp-for="Expense.ExpenseType"></label>

                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <input asp-for="Expense.ExpenseName" class="form-control" />
                        <span asp-validation-for="Expense.ExpenseName" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <input type="number" asp-for="Expense.Amount" class="form-control" />
                        <span asp-validation-for="Expense.Amount" class="text-danger"></span>

                    </div>

                    <div class="col-md-4">
                        <select type="text" asp-for="Expense.ExpenseTypeId" asp-items="@Model.TypeDropDown" class="form-control">
                            <option selected>-- Select Expense Type --</option>
                        </select>
                        <span asp-validation-for="Expense.ExpenseTypeId" class="text-danger"></span>

                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-md-8 offset-2 text-center row">
                        <div class="col-md">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col-md">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>



                </div>


            </div>
        </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
